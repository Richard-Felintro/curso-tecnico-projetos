@model Jogador 
@{
    ViewData["Title"] = "Editando jogador...";
}

<h2>Edição de Jogador</h2>

<form method="post" asp-action="@Url.Action("Atualizar")" enctype="multipart/form-data">
    <input type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador">

    <label for="">Nome</label>
    <input name="JogadorNome" type="text" value="@ViewBag.Jogador.Nome">

    <label for="">Email</label>
    <input name="JogadorEmail" type="email" value="@ViewBag.Jogador.Email">

    <label for="">Senha</label>
    <input name="JogadorSenha" type="password" value="@ViewBag.Jogador.Senha">

    <select name="Equipe" value="@ViewBag.Jogador.Equipe">
    @foreach (Equipe equipe in ViewBag.Equipe)
    {
        <option value="@equipe.IdEquipe">@equipe.Nome</option>
    }
    </select>

    <button type="submit">Atualizar</button>
</form>
